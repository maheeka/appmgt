FROM wso2-appcloud/msf4j:2.0.0-base

ENV MSF4J_JAR ARTIFACT_NAME
ENV URL ARTIFACT_URL
ENV TOTAL_MEMORY VAL_TOTAL_MEMORY

RUN wget "$URL" -O "$MSF4J_HOME/$MSF4J_JAR"

CMD ["bash", "-c", "source /init.sh"]